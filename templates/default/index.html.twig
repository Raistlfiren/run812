{% extends 'base.html.twig' %}

{% block body %}
    {% block stylesheets %}
        {{ parent() }}
        {{ encore_entry_link_tags('homepage') }}
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('homepage') }}
    {% endblock %}

    <section class="py-5">
        <h1 class="fw-light text-center">Filter Routes</h1>
        <div class="container">
            <hr />
            <div class="row">
                <div class="mb-5 col-md-4 col-sm-12">
                    <p class="form-label fw-bold">General Location of Route</p>
                    {% for location in locations %}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="{{ location.uuid }}" name="locations" value="{{ location.title }}">
                            <label class="form-check-label" for="{{ location.uuid }}" data-filter="{{ location.title }}">{{ location.title }}</label>
                        </div>
                    {% endfor %}
                </div>
                <div class="mb-5 col-md-4 col-sm-12">
                    <label for="routeNameSearch" class="form-label fw-bold">Route Name</label>
                    <input type="text" class="form-control" id="routeNameSearch">
                </div>
                <div class="col-md-4 col-sm-12">
                    <label for="distanceSearch" class="form-label fw-bold">Route Distance</label>
                    <input type="text" class="form-control" data-min={{ minDistance.0.distance }} data-max={{ maxdistance.0.distance }} id="distanceSearch">
                </div>
            </div>
        </div>

    </section>
    <div class="py-5 bg-light">
        <div class="container">
            <div id="routeContainer" class="row gy-3 grid">
                {% set routeCollectionName = '' %}

                {% for route in routes %}
                    {% if route.routeCollection is empty %}
                        <div class="grid-item col-md-4 col-sm-12"
                             data-locations="{{ route.getFlatLocations }}"
                             data-name="{{ route.name }}"
                             data-distance="{{ route.distance }}"
                             data-slug="{{ route.slug }}"
                             data-geojson-path="{{ path('route_geojson', {slug: route.slug}) }}"
                        >
                            <div class="card">
                                <div class="card-header">
                                    <span class="fw-bold">{{ route.name }}</span>
                                </div>
                                <div class="card-body">
                                    <p id="map-{{ route.slug }}" class="maps text-center"></p>
                                    <p><strong>Distance</strong></p>
                                    <p>
                                        <a href="{{ path('route_view', {'slug': route.slug}) }}" class="btn btn-primary">{{ route.distance }}</a>
                                    </p>
                                    <p><strong>Locations</strong></p>
                                    <p>
                                        {% for location in route.locations %}
                                            <span class="btn btn-secondary">{{ location.title }}</span>
                                        {% endfor %}
                                    </p>
                                    <a href="{{ path('route_view', {'slug': route.slug}) }}" class="btn btn-primary d-block text-center">View Route</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        {% if routeCollectionName != route.routeCollection.name %}
                            <div class="grid-item col-md-4 col-sm-12"
                                 data-locations="{{ route.routeCollection.locations|join(', ') }}"
                                 data-name="{{ route.routeCollection.name }}"
                                 data-distance="{{ route.routeCollection.distances|join(', ') }}"
                                 data-slug="{{ route.slug }}"
                                 data-geojson-path="{{ path('route_geojson', {slug: route.slug}) }}"
                            >
                                <div class="card">
                                    <div class="card-header">
                                        <span class="fw-bold">{{ route.routeCollection.name }}</span>
                                    </div>
                                    <div class="card-body">
                                        <p id="map-{{ route.slug }}" class="maps text-center"></p>
                                        <p><strong>Distances</strong></p>
                                        <p>
                                            {% for routeItem in route.routeCollection.routes %}
                                                <a href="{{ path('route_view', {'slug': route.slug}) }}" class="btn btn-primary">{{ routeItem.distance }}</a>
                                            {% endfor %}
                                        </p>
                                        <p><strong>Locations</strong></p>
                                        <p>
                                            {% for location in route.routeCollection.locations %}
                                                <span class="btn btn-secondary">{{ location }}</span>
                                            {% endfor %}
                                        </p>
                                        <a href="{{ path('route_view', {'slug': route.routeCollection.slug}) }}" class="btn btn-primary text-center d-block">View Route</a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {% set routeCollectionName = route.routeCollection.name %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>

    </div>

    {% if closestSaturday is not empty %}
        <div id="saturdayModal" data-bs-backdrop="static" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Saturday Route</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Hey! Please consider joining us for our Saturday route on {{ closestSaturday|date('F j') }}.</p>
                    </div>
                    <div class="modal-footer">
                        <a href="{{ path('route_saturday') }}" type="button" class="btn btn-primary">View Saturday Route</a>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}